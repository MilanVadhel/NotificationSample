<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".FirstActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendMessageNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/post_simple_notification"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSendCallNotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/post_notification_with_click"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnSendMessageNotification"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_activity"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>